<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PawfeedsProvisioner.Pages.ProvisioningPage"
             Title="Provisioning">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="16">

            <!-- Title / status -->
            <Label x:Name="TitleLabel"
                   Text="Preparing…"
                   FontAttributes="Bold"
                   FontSize="20"
                   HorizontalTextAlignment="Center" />

            <Label x:Name="Status"
                   Text="Waiting for credentials…"
                   LineBreakMode="WordWrap"
                   HorizontalTextAlignment="Center" />

            <!-- Spinner while talking to device -->
            <ActivityIndicator x:Name="Spinner"
                               IsVisible="True"
                               IsRunning="True"
                               HeightRequest="32" />

            <!-- Next-steps card appears after we finish attempting provision -->
            <Frame x:Name="NextStepsCard"
       IsVisible="False"
       Padding="16"
       BorderColor="LightGray"
       CornerRadius="12"
       HasShadow="True">

                <VerticalStackLayout Spacing="12">
                    <Label Text="Next steps"
                           FontAttributes="Bold"
                           FontSize="18" />
                    <Label Text="If you used the device's setup Wi-Fi (AP), reconnect your phone to your HOME Wi-Fi before continuing."
                           LineBreakMode="WordWrap" />

                    <Button Text="Open Wi-Fi Settings"
                            Clicked="OpenWifi" />
                </VerticalStackLayout>
            </Frame>

            <!-- Primary action: continue to confirmation -->
            <Button x:Name="ContinueBtn"
                    IsVisible="False"
                    Text="Continue"
                    Clicked="Continue"
                    Margin="0,10,0,0" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>

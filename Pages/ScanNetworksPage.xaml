<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PawfeedsProvisioner.Pages.ScanNetworksPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Choose Home Wi-Fi">
  <VerticalStackLayout Padding="24" Spacing="12">
    <Button Text="Refresh List" Clicked="Refresh" />
    <CollectionView x:Name="Networks" SelectionMode="Single" SelectionChanged="Pick">
      <CollectionView.ItemTemplate>
        <DataTemplate>
          <HorizontalStackLayout Padding="8" Spacing="12">
            <Label Text="{Binding SSID}" FontSize="18" />
            <Label Text="{Binding RSSI}" />
            <Label Text="{Binding Secure, StringFormat='Secure: {0}'}" />
          </HorizontalStackLayout>
        </DataTemplate>
      </CollectionView.ItemTemplate>
    </CollectionView>
  </VerticalStackLayout>
</ContentPage>

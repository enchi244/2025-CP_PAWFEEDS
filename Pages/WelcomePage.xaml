<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PawfeedsProvisioner.Pages.WelcomePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Pawfeeds • Provision">
  <VerticalStackLayout Padding="24" Spacing="16">
    <Label Text="Add a new device" FontSize="24" FontAttributes="Bold" />
    <Label Text="We’ll connect your Pawfeeds device to your home Wi-Fi." />
    <Button x:Name="StartBtn" Text="Start" Clicked="OnStartClicked" />

    <BoxView HeightRequest="1" Color="{StaticResource Gray300}" Margin="0,24,0,0" />
    <Label Text="Already set up a device?" FontSize="18" FontAttributes="Bold" Padding="0,12,0,0"/>
    <Label Text="If your device is already on your home Wi-Fi, you can find it here or reset it." />

    <Grid ColumnDefinitions="*,*" ColumnSpacing="12">
        <Button Grid.Column="0" x:Name="FindBtn" Text="Find My Device" Clicked="OnFindClicked" />
        <Button Grid.Column="1" x:Name="ResetBtn" Text="Reset Device" Clicked="OnResetClicked" BackgroundColor="{StaticResource Gray500}"/>
    </Grid>

    <ActivityIndicator x:Name="ResetSpinner" IsRunning="False" IsVisible="False" />
    
    <Button Text="Sign Out" Clicked="OnSignOutClicked" BackgroundColor="{StaticResource Gray600}" Margin="0,24,0,0" />
    </VerticalStackLayout>
</ContentPage>
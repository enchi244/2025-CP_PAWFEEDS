<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PawfeedsProvisioner.Pages.LoginPage"
             Title="Login"
             Shell.NavBarIsVisible="False">
    <VerticalStackLayout Padding="30" Spacing="15" VerticalOptions="Center">
        <Label 
            Text="Welcome to Pawfeeds"
            FontSize="28"
            FontAttributes="Bold"
            HorizontalOptions="Center" />
        <Label 
            Text="Sign in or create an account to continue"
            HorizontalOptions="Center"
            Margin="0,0,0,20"/>
            
        <Entry x:Name="EmailEntry" Placeholder="Email" Keyboard="Email"/>
        <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True"/>
        
        <ActivityIndicator x:Name="ActivitySpinner" IsRunning="False" IsVisible="False" />
        
        <Button Text="Sign In" Clicked="OnSignInClicked" Margin="0,10,0,0"/>
        <Button Text="Create Account" Clicked="OnSignUpClicked" BackgroundColor="{StaticResource Gray500}"/>
    </VerticalStackLayout>
</ContentPage>
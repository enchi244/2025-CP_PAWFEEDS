<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PawfeedsProvisioner.Pages.EnterCredentialsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Wi-Fi &amp; Hostname">
  <ScrollView>
    <VerticalStackLayout Padding="24" Spacing="12">
      <Label Text="Selected SSID" />
      <Entry x:Name="SsidEntry" IsReadOnly="True" />
      <Label Text="Wi-Fi Password" />
      <Entry x:Name="PassEntry" IsPassword="True" Placeholder="Enter password" />
      <Label Text="Device Hostname" />
      <Entry x:Name="HostEntry" Placeholder="e.g., pawfeeds-cam-1" />
      <Button Text="Provision â†’" Clicked="Provision" />
    </VerticalStackLayout>
  </ScrollView>
</ContentPage>

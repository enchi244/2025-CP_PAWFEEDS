<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
  <!-- Allow cleartext to all hosts (needed for http://192.168.x.x/status) -->
  <base-config cleartextTrafficPermitted="true">
    <trust-anchors>
      <certificates src="system" />
      <!-- If you ever install user CAs on the device and want them honored, keep this.
           Otherwise you can remove the next line. -->
      <certificates src="user" />
    </trust-anchors>
  </base-config>
</network-security-config>
